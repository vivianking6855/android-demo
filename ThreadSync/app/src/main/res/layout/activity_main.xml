<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.vv.threadsync.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="runSyncBasic"
        android:padding="20dp"
        android:text="Sync Basic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="runSyncAdvanced"
        android:padding="20dp"
        android:text="Sync Advanced" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="runConcurrentCore"
        android:padding="20dp"
        android:text="Concurrent Core Feature" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="runProductConsume"
        android:padding="20dp"
        android:text="Product - Consume" />

    <TextView
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:maxLines="6"
        android:scrollbars="vertical"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="20dp" />
</LinearLayout>
